<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:id="rootPanelUsuario" prefHeight="700.0" prefWidth="1300.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="co.edu.uniquindio.poo.billeteravirtual.viewControllers.PanelUsuarioController"
            stylesheets="@estilos.css">
    <children>
        <!-- Panel lateral oscuro -->
        <VBox spacing="15" prefWidth="270.0" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0">
            <children>
                <Label text="PayVax" textFill="red" alignment="CENTER" maxWidth="Infinity" fx:id="tituloLabel" styleClass="titulo-label"/>

                <!-- Sección: Dinero -->
                <Label text="💰 Dinero" textFill="white" fx:id="dineroLabel" styleClass="section-label"/>
                <Button fx:id="btnRecargar" text="➕ Meter Dinero" maxWidth="Infinity" styleClass="menu-button"/>
                <Button fx:id="btnRetirar" text="➖ Sacar Dinero" maxWidth="Infinity" styleClass="menu-button"/>
                <Button fx:id="btnTransferir" text="🔁 Pasar Dinero" maxWidth="Infinity" styleClass="menu-button"/>
                <Button fx:id="btnMovimientos" text="📜 Ver Movimientos" maxWidth="Infinity" styleClass="menu-button"/>
                <Button fx:id="btnEstadoCuentas" text="💼 Estado de Cuentas" maxWidth="Infinity" styleClass="menu-button"/>

                <!-- Sección: Usuario -->
                <Label text="👤 Mi Cuenta" textFill="white" fx:id="usuarioLabel" styleClass="section-label"/>
                <Button fx:id="btnDatosUsuario" text="📋 Ver Datos" maxWidth="Infinity" styleClass="menu-button"/>
                <Button fx:id="btnActualizarDatos" text="✏️ Actualizar Datos" maxWidth="Infinity" styleClass="menu-button"/>
                <Button fx:id="btnCambiarClave" text="🔒 Cambiar Contraseña" maxWidth="Infinity" styleClass="menu-button"/>

                <!-- Sección: Cuentas Bancarias -->
                <Label text="🏦 Cuentas Bancarias" textFill="white" fx:id="cuentasLabel" styleClass="section-label"/>
                <Button fx:id="btnAgregarCuenta" text="➕ Agregar Cuenta" maxWidth="Infinity" styleClass="menu-button"/>
                <Button fx:id="btnGestionarCuentas" text="🧾 Gestionar Cuentas" maxWidth="Infinity" styleClass="menu-button"/>

                <!-- Sección: General -->
                <Label text="⚙️ Opciones" textFill="white" fx:id="opcionesLabel" styleClass="section-label"/>
                <Button fx:id="btnCerrarSesion" text="🚪 Cerrar Sesión" maxWidth="Infinity" styleClass="cerrar-sesion-button"/>
            </children>
        </VBox>

        <!-- Área principal de contenido -->
        <AnchorPane fx:id="panelContenido" layoutX="270.0" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.rightAnchor="0">
            <children>
                <Label layoutX="30.0" layoutY="25.0" text="¡Bienvenido, Usuario!" fx:id="bienvenidaLabel" styleClass="bienvenida-label"/>

                <!-- Panel inicial de bienvenida -->
                <Pane fx:id="panelBienvenida" layoutX="30.0" layoutY="70.0" prefWidth="980.0" prefHeight="550.0" styleClass="panel-bienvenida">
                    <children>
                        <Label layoutX="40.0" layoutY="40.0" text="Aquí puedes gestionar tu billetera virtual PayVax." fx:id="mensajeBienvenidaLabel" styleClass="mensaje-bienvenida-label"/>
                        <Label layoutX="40.0" layoutY="80.0" text="Utiliza el menú de la izquierda para acceder a cada funcionalidad." fx:id="instruccionesLabel" styleClass="instrucciones-label"/>
                    </children>
                </Pane>
            </children>
        </AnchorPane>
    </children>
</AnchorPane>


